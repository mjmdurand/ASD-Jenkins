pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'make main'
                sh 'ls'
                archiveArtifacts artifacts: 'main', fingerprint: true
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'ls'
               /* junit '*.xml' */
            }
        }
        stage('Deploy') {
            when {
              expression {
                currentBuild.result == 'SUCCESS' 
              }
            }
            steps {
                echo 'Deploying....'
            }
        }
    }
}
